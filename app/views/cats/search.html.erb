<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card bg-dark text-light p-4 shadow-sm">
        <h1 class="text-center mb-4">Explore This Cat</h1>

        <% if @error %>
          <div class="alert alert-danger mt-4" role="alert">
            <%= @error %>
          </div>
        <% elsif @cat_info %>
          <div class="mt-4">
            <h2 class="text-info"><%= @cat_info["name"] %></h2>
            <p><strong>Description:</strong> <%= @cat_info["description"] %></p>
            <p><strong>Temperament:</strong> <%= @cat_info["temperament"] %></p>
            <p><strong>Origin:</strong> <%= @cat_info["origin"] %></p>

            <% if @image_url %>
              <div class="text-center mt-3">
                <img src="<%= @image_url %>" alt="<%= @cat_info["name"] %>" class="img-fluid rounded" style="max-width: 300px;" />
              </div>
            <% else %>
              <p class="text-muted">No image available for this breed.</p>
            <% end %>
          </div>
        <% end %>

        <div class="mt-4 text-center">
          <%= link_to "← Back to Home", root_path, class: "btn btn-outline-light" %>
        </div>
      </div>
    </div>
  </div>
</div>

